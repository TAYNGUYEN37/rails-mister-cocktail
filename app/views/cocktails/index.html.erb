<div class="home-banner" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path 'banner.jpg' %>');">
   <h1><span id="banner-typed-text"></span></h1>
</div>


<div class="cocktail_list">
  <h3>List of all Cocktails</h3>
      <% @cocktails.each do |cocktail| %>
      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 270, crop: :fill %>');">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= link_to cocktail.name, cocktail_path(cocktail), { class: "cname" }%></h2>
            </div>
            <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
          </div>
      </div>
    </div>
  <%end%>
<%= link_to "Add new cocktail", new_cocktail_path, { class: "button"}%>
</div>


